<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_profile_banner"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/green_gradient"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_picture"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_profile_picture"
            android:fontFamily="sans-serif-black"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="32dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_profile_stats"
        android:layout_below="@id/user_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/shop_points_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/award"/>
            <TextView
                android:id="@+id/user_profile_foundedCaches"
                android:layout_toRightOf="@id/shop_points_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"/>
    </LinearLayout>

    <TableRow
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="2dp"
        android:background="#DCDBDB"></TableRow>

    <TextView
        android:id="@+id/user_profile_registerDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"/>

    <TableRow
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="2dp"
        android:background="#DCDBDB"></TableRow>

    <TextView
        android:id="@+id/user_profile_foundCache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:text="Caches trouvÃ©es:"/>

    <TableRow
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="2dp"
        android:background="#DCDBDB"></TableRow>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/user_profile_foundedCachesRV" />


</LinearLayout>
