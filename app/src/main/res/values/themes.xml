<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DEV_MOB_Houet_Piron" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.DEV_MOB_Houet_Piron.ActionBarStyle</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#43A047</item>
        <item name="colorPrimaryVariant">#43A047</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000000</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DEV_MOB_Houet_Piron.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#43A047</item>
        <item name="colorPrimaryVariant">#43A047</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000000</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DEV_MOB_Houet_Piron.ActionBarStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:titleTextStyle">@style/Theme.DEV_MOB_Houet_Piron.ActionBarStyle.Text</item>

    </style>

    <style name="Theme.DEV_MOB_Houet_Piron.ActionBarStyle.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">0sp</item>
    </style>
</resources>